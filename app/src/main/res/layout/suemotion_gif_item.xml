<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/common_item_mask">

    <com.cartoon.pictures.widget.SquaImageView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/gif_tag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/gif_tag"
        android:gravity="center"
        android:text="@string/gif_tag"
        android:textColor="@color/gif_tag_color"
        android:textSize="14sp"/>

</FrameLayout>
