<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:background="@color/white">

    <com.cartoon.pictures.uilibrary.widget.ProgressWheel
        android:id="@+id/item_progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        wheel:matProg_barColor="#5588FF"
        wheel:matProg_progressIndeterminate="true"/>

    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:visibility="invisible"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/common_item_mask"
            android:padding="4dp"
            android:src="@drawable/ic_player_download_no"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/download"
            android:background="@drawable/common_item_mask"
            android:padding="4dp"
            android:src="@drawable/ic_player_share_no"/>


        <ImageView
            android:id="@+id/gif_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/share"
            android:layout_margin="4dp"
            />

    </RelativeLayout>


</RelativeLayout>
