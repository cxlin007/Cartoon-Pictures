<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_item_mask"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        >

        <ImageView
            android:id="@+id/title_mark"
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_color_primary"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/title_more"
            android:textColor="@color/title_more_color"
            android:textSize="14sp"
            android:drawableRight="@drawable/category_top_arrow"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>


    <com.cartoon.pictures.widget.FixHeightGirdView
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:orientation="horizontal"
        android:verticalSpacing="8dp"
        />

</LinearLayout>